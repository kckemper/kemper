\mode<presentation>

\setbeamercolor{normal text}{fg=black,bg=black!5}

\definecolor{DRLorange}{RGB}{255,150,0}
\definecolor{DRLblack}{RGB}{50,50,50}

\setbeamercolor{item projected}{use=item,fg=black,bg=item.fg!75}

\setbeamercolor{structure}{fg=DRLorange}

\setbeamercolor{palette primary}{fg=DRLorange,bg=DRLblack!70}
\setbeamercolor{palette secondary}{fg=DRLorange,bg=DRLblack!80}
\setbeamercolor{palette tertiary}{fg=DRLorange,bg=DRLblack!90}
\setbeamercolor{palette quaternary}{fg=DRLorange,bg=DRLblack}

\setbeamercolor{titlelike}{parent=palette quaternary}

\setbeamercolor{block title}{fg=DRLorange,bg=DRLblack}
\setbeamercolor{block title alerted}{use=alerted text,fg=DRLorange,bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{use=example text,fg=DRLorange,bg=example text.fg!75!bg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!25!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg=DRLblack!70}
  
\setbeamercolor{palette sidebar primary}{fg=DRLorange}
\setbeamercolor{palette sidebar secondary}{fg=DRLorange!75}
\setbeamercolor{palette sidebar tertiary}{fg=DRLorange!75}
\setbeamercolor{palette sidebar quaternary}{fg=DRLorange}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
