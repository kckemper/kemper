\begin_layout Enumerate
\begin_inset Formula $\dot{x}=1+rx+x^{2}$
\end_inset


\begin_inset Formula \begin{eqnarray*}
0 & = & 1+rx+x^{2}\\
\\x^{*} & = & \frac{-r\pm\sqrt{r^{2}-4}}{2}\end{eqnarray*}

\end_inset


\begin_inset Formula \begin{eqnarray*}
\frac{\partial f}{\partial x} & = & r+2x\\
\\x & = & -\frac{r}{2}\\
\implies\\
-\frac{r}{2} & = & -\frac{r}{2}\pm\frac{\sqrt{r^{2}-4}}{2}\\
0 & = & \pm\frac{\sqrt{r^{2}-4}}{2}\\
r & = & \pm2\end{eqnarray*}

\end_inset


\begin_inset Formula \[
\left(x^{*},r_{o}\right)=\begin{matrix}\left(-1,2\right)\\
\left(1,-2\right)\end{matrix}\]

\end_inset


\begin_inset Formula \[
\frac{\partial f}{\partial r}=x\]

\end_inset


\begin_inset Formula \begin{eqnarray*}
\left.\frac{\partial f}{\partial r}\right|_{x^{*}=-1} & = & -1\\
\left.\frac{\partial f}{\partial r}\right|_{x^{*}=1} & = & 1\end{eqnarray*}

\end_inset


\begin_inset Formula \[
\frac{\partial^{2}f}{\partial x^{2}}=2\]

\end_inset


\begin_inset Formula $\therefore$
\end_inset

 there is a saddle bifurcation at both 
\begin_inset Formula $\left(-1,2\right)$
\end_inset

 and 
\begin_inset Formula $\left(1,-2\right)$
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\dot{x}=x-rx\left(1-x\right)=x-rx+rx^{2}$
\end_inset


\begin_inset Formula \begin{eqnarray*}
0 & = & x-rx\left(1-x\right)\\
0 & = & -x\left(1-r+rx\right)\\
\\x^{*} & = & \begin{matrix}0\\
\frac{r-1}{r}\end{matrix}\end{eqnarray*}

\end_inset


\begin_inset Formula \begin{eqnarray*}
\frac{\partial f}{\partial x} & = & 1-r+2rx\end{eqnarray*}

\end_inset


\begin_inset Formula \begin{eqnarray*}
\left.\frac{\partial f}{\partial x}\right|_{x^{*}=0} & = & 1-r=0\implies r=1\\
\\\left.\frac{\partial f}{\partial x}\right|_{x^{*}=\frac{r-1}{r}} & = & 1-r+2\left(r-1\right)=0\implies r=1\end{eqnarray*}

\end_inset


\begin_inset Formula \[
\left(x^{*},r_{0}\right)=\left(0,1\right)\]

\end_inset


\begin_inset Formula \[
\frac{\partial f}{\partial r}=-x+x^{2}\]

\end_inset


\begin_inset Formula \[
\left.\frac{\partial f}{\partial r}\right|_{x^{*}=0}=0\]

\end_inset


\begin_inset Formula \[
\frac{\partial f}{\partial x\partial r}=-1+2x\]

\end_inset


\begin_inset Formula \[
\left.\frac{\partial f}{\partial x\partial r}\right|_{x^{*}=0}=-1\]

\end_inset


\begin_inset Formula \[
\frac{\partial^{2}f}{\partial x^{2}}=2r\]

\end_inset


\begin_inset Formula \[
\left.\frac{\partial^{2}f}{\partial x^{2}}\right|_{r=1}=2\ne0\]

\end_inset


\begin_inset Formula $\therefore$
\end_inset

 there is a transcritical bifurcation at 
\begin_inset Formula $\left(0,1\right)$
\end_inset

.
\end_layout

