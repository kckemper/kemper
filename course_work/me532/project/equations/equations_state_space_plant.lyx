\begin_layout Itemize
System 1 (actuator side):
\begin_inset Formula \begin{eqnarray*}
\Sigma\tau=I\ddot{\theta} & = & \tau-rF_{k}-rF_{B}\\
I\ddot{\theta} & = & \tau-rk\left(r\theta-x\right)-rB\left(r\dot{\theta}-\dot{x}\right)\\
I\ddot{\theta} & = & \tau-kr^{2}\theta+krx-Br^{2}\dot{\theta}+Br\dot{x}\\
\ddot{\theta} & = & \frac{1}{I}\tau-\frac{kr^{2}}{I}\theta+\frac{kr}{I}x-\frac{Br^{2}}{I}\dot{\theta}+\frac{Br}{I}\dot{x}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Itemize
System 2 (body side):
\begin_inset Formula \begin{eqnarray*}
\Sigma F=m\ddot{x} & = & F_{k}+F_{B}-F_{g}\\
m\ddot{x} & = & k\left(r\theta-x\right)+B\left(r\dot{\theta}-\dot{x}\right)-mg\\
m\ddot{x} & = & kr\theta-kx+Br\dot{\theta}-B\dot{x}-mg\\
\ddot{x} & = & \frac{kr}{m}\theta-\frac{k}{m}x+\frac{Br}{m}\dot{\theta}-\frac{B}{m}\dot{x}-g\end{eqnarray*}

\end_inset


\end_layout

